{% extends 'components/table.html.twig' %}

{% block tTitle %}
	<h3 class="card-title">{{ 'Order'|trans}}</h3>
{% endblock %}

{% block tHead %}
	<tr>
		<th style="width: 10px;">Id</th>
		<th style="width: 150px;">{{ 'Actions'|trans}}</th>
	</tr>
{% endblock %}

{% block tBody %}
	{% for saleOrder in pagination %}
		<tr class="align-middle">
			<td>{{ saleOrder.id }}</td>
			<td class="d-flex justify-content-center gap-2">
				<a class="btn btn-success" href="{{ path('tenant_sale_order_show', { 'id': saleOrder.id }) }}">{{ 'Show'|trans}}</a>
			</td>
		</tr>
	{% else %}
		<tr class="align-middle">
			<td colspan="4">{{ 'no records found'|trans}}</td>
		</tr>
	{% endfor %}
{% endblock %}


