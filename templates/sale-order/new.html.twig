{% extends 'components/layout.html.twig' %}

{% block main %}
    <div class="{{ mc_class }}">
        <div class="{{ mct_class }}">
            {{ form_start(form) }}
                <h5 class="{{ mt_class }}">	{{ form_header|trans }}</h5>
                {{ form_row(form.client) }}
                {{ form_row(form.priceList) }}
                <div class="mt-2 w-full flex justify-end">
                    <button type="submit" class="{{ btn_success_class }}">
                        {{ button_label|trans }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}