{% extends 'components/layout.html.twig' %}

{% block main %}
	<div class="{{ mc_class }}">
		<div class="{{ mct_class }}">
			<div class="flex flex-col gap-4 md:flex-row">
				<div class="w-full md:w-1/2">
					<div class="flex justify-center">
						{{ include('components/icon_camera.html.twig',{ 'width': 100, 'height': 100 }) }}
					</div>
					<h3 class="{{ mt_class }}">{{ name }}</h3>
				</div>
				<div class="w-full md:w-1/2">
					{{ form_start(userForm) }}
						<div class="w-full text-lg font-normal text-gray-500 dark:text-gray-400 mb-2">
							{{ 'Basic data'|trans }}
						</div>
						{{ form_row(userForm.username) }}
						{{ form_row(userForm.isDarkTheme) }}
						<div class="mt-2 w-full flex justify-end">
							<button class="{{ btn_success_class }}">
								{{ 'Save'|trans }}
							</button>
						</div>
					{{ form_end(userForm) }}
					{{ form_start(passForm) }}
						<div class="w-full text-lg font-normal text-gray-500 dark:text-gray-400 mb-2">
							{{ 'Change password'|trans }}
						</div>
						{{ form_row(passForm.old_password) }}
						{{ form_row(passForm.plainPassword) }}
						<div class="mt-2 w-full flex justify-end">
							<button class="{{ btn_success_class }}">
								{{ 'Save'|trans }}
							</button>
						</div>
					{{ form_end(passForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
