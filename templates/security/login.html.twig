{% extends 'base.html.twig' %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center vh-100 bg-secondary">
		{% if error %}
			<div class="alert alert-danger position-absolute top-0 end-0 m-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<form method="post" class="card">
			<div class="form-group p-3">
				<label for="username">Username</label>
				<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
			</div>
			<div class="form-group p-3">
				<label for="password">Password</label>
				<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-primary m-3" type="submit">
				Sign in
			</button>
		</form>
	</div>
{% endblock %}
