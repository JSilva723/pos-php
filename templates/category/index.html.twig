{% extends 'components/table.html.twig' %}

{% block tTitle %}
	<h3 class="card-title">{{ 'Categories'|trans}}</h3>
	<a class="btn btn-success" href="{{ path('tenant_category_new') }}">{{ 'New'|trans}}</a>
{% endblock %}

{% block tHead %}
	<tr>
		<th style="width: 10px;">Id</th>
		<th>{{ 'Name'|trans}}</th>
		<th style="width: 150px;">{{ 'Actions'|trans}}</th>
	</tr>
{% endblock %}

{% block tBody %}
	{% for category in pagination %}
		<tr class="align-middle">
			<td>{{ category.id }}</td>
			<td>{{ category.name }}</td>
			<td class="d-flex justify-content-center gap-2">
				<a class="btn btn-primary" href="{{ path('tenant_category_edit', {'id': category.id}) }}">{{ 'Edit'|trans}}</a>
				{{ include('components/btn_delete.html.twig',{
						'path': 'tenant_category_delete',
						'id': category.id,
						'confirm_delete': 'Are you sure you want to delete this item?'
					}) 
				}}
			</td>
		</tr>
	{% else %}
		{{ include('components/no_records.html.twig') }}
	{% endfor %}
{% endblock %}
