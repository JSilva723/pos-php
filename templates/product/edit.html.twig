{% extends 'components/layout.html.twig' %}

{% block main %}
    <div class="{{ mc_class }}">
        <div class="{{ mct_class }}">
            {{ form_start(form) }}
                <h5 class="{{ mt_class }}">	{{ 'Edit'|trans }}</h5>
                <div class="flex flex-col md:flex-row">
                    <div class="w-full px-2">
                        {{ form_row(form.name) }}
                        {{ form_row(form.category) }}
                        {{ form_row(form.sku) }}
                        {{ form_row(form.unitOfMeasure) }}
                    </div>
                    <div class="w-full px-2">
                        {{ form_row(form.stockQuantity) }}
                        {{ form_row(form.stockMin) }}
                        {{ form_row(form.brand) }}
                        {{ form_row(form.isFractionable) }}
                    </div>
                </div>
                <div class="mt-2 w-full flex justify-end">
                    <button type="submit" class="{{ btn_success_class }}">
                        {{ 'Update'|trans }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
