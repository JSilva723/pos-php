{% extends 'components/layout.html.twig' %}

{% block main %}
	<div class="row p-3">
		<div class="col-12">
			<div class="card mb-4">
				<div class="card-header">
					<h3>{{ product.name }}</h3>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-md-4">
							<p>{{ 'Price'|trans }}</p>
							<p class="text-end text-md-start ps-md-5">{{ product.price }}</p>
							<p>{{ 'Category'|trans }}</p>
							<p class="text-end  text-md-start ps-md-5">{{product.category.name }}</p>
						</div>
						<div class="col-md-4">
							<p>{{ 'Stock' }}</p>
							<p class="text-end  text-md-start ps-md-5">{{ product.stockQuantity }}</p>
							{% if product.sku %}
								<p>{{ 'SKU' }}</p>
								<p class="text-end  text-md-start ps-md-5">{{ product.sku }}</p>
							{% endif %}
						</div>
						<div class="col-md-4 d-flex justify-content-center">
							<div class="position-relative">
								{% if product.img %}
									<img src="data:image/{{ product.mimeType }};base64,{{ product.img }}" alt="Logo" width="200px" height="200px">
								{% else %}
									{{ include('components/icon_camera.html.twig',{ 'width': 200, 'height': 200 }) }}
								{% endif %}
								<div class="position-absolute top-0 end-0">
									{{ include('components/btn_upload.html.twig',{ 'path': 'tenant_product_upload', 'id': product.id }) }}
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="d-flex float-end gap-3">
						<a href="{{ path('tenant_product_edit', {'id': product.id}) }}" class="btn btn-primary">{{ 'Edit'|trans }}</a>
						{{ include('components/btn_delete.html.twig',{
								'path': 'tenant_product_delete',
								'id': product.id,
								'confirm_delete': 'Are you sure you want to delete this item?'
							}) 
						}}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
