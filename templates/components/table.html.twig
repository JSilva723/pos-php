{% extends 'components/layout.html.twig' %}

{% block main %}
	<div class="row p-3">
		<div class="col-12">
			<div class="card mb-4">
				<div class="card-header">
					<div class="d-flex justify-content-between align-items-center">
						{% block tTitle %}{% endblock %}
					</div>
					<div class="d-flex">
						<form class="form-horizontal w-75" method="GET">
							<div class="input-group">
								<input id="btn-input" type="text" class="form-control input-sm" name="q"/>
								<button class="btn btn-success" type="submit">
									<i class="bi bi-search" aria-hidden="true"></i>
								</button>
							</div>
						</form>
						<form method="GET">
							<input id="btn-input" type="text" hidden name="q" value=""/>
							<button class="btn btn-danger" type="submit">
								<i class="bi bi-trash" aria-hidden="true"></i>
							</button>
						</form>
					</div>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered table-striped">
							<thead>
								{% block tHead %}{% endblock %}
							</thead>
							<tbody>
								{% block tBody %}{% endblock %}
							</tbody>
						</tbody>
					</table>
				</div>
			</div>
			<div class="card-footer">
				{{ knp_pagination_render(pagination) }}
			</div>
		</div>
	</div>
{% endblock %}
