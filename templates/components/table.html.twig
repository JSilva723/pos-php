{% extends 'components/layout.html.twig' %}

{% block main %}
	<section>
		<div class="container mx-auto p-4 max-w-screen-xl">
			<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden">
				<div class="flex flex-col md:flex-row items-center justify-between p-4 space-y-3 md:space-y-0 md:space-x-4">
					{% block tTitle %}{% endblock %}
				</div>
				<div class="overflow-x-auto">
					<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
						<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
							{% block tHead %}{% endblock %}
						</thead>
						<tbody>
							{% block tBody %}{% endblock %}
						</tbody>
					</table>
				</div>
				<nav class="flex flex-col items-center p-4 space-y-3 md:space-y-0" aria-label="Table navigation">
					<ul class="inline-flex items-stretch -space-x-px">
						{{ knp_pagination_render(pagination) }}
					</ul>
				</nav>
			</div>
		</div>
	</section>
{% endblock %}
